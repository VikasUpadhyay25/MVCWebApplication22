@model IEnumerable<MVCWebApplication22.Models.Provider>

@{
    ViewBag.Title = "ShowProviders";
}

<h2>ShowProviders</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProviderName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProviderType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.HiddenFor(modelItem => item.ProviderId)
                @Html.DisplayFor(modelItem => item.ProviderName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProviderType)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProviderId, name = item.ProviderName, type = item.ProviderType }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProviderId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProviderId, name = item.ProviderName, type = item.ProviderType })
            </td>
        </tr>
    }

</table>
